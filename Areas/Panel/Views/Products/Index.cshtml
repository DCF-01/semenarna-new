@model List<Product>
@{
    
    ViewBag.Title = User.Identity.Name;
    Layout = "~/Areas/Panel/Views/Shared/_PanelLayout.cshtml";
    var i = 0;
}

<table class="table table-striped table-light">
    <thead>

        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Manage</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model) {
            i += 1;
            <tr>
                <th scope="row">@i</th>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td><a href="@Context.Request.Path/Manage/@product.ProductId">Edit</a></td>
                <td>
                    <button type="button" class="close delete-item-btn" aria-label="Close">
                        <div class="item-id">@product.ProductId</div>
                        <span aria-hidden="true">&times;</span>
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>