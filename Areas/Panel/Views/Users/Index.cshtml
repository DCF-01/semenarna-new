@model List<UserViewModel>
@{
    ViewBag.Title = User.Identity.Name;
    Layout = "~/Areas/Panel/Views/Shared/_PanelLayout.cshtml";
    int i = 0;
}
<table class="table table-striped table-dark">
    <thead>

        <tr>
            <th scope="col">#</th>
            <th scope="col">Username</th>
            <th scope="col">Email</th>
            <th scope="col">Email Confirmed</th>
            <th scope="col">Details</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model) {
            i += 1;
            <tr>
                <th scope="row">@i</th>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                @if (user.EmailConfirmed) {
                    <td>Email confirmed</td>
                }
                else {
                    <td>Email has not been confirmed</td>
                }
                <td><a href="@Context.Request.Path/Manage/@user.UserId">Details</a></td>
                <td>
                    <button type="button" class="close delete-item-btn" aria-label="Close">
                        <div class="item-id">@user.UserId</div>
                        <span aria-hidden="true">&times;</span>
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>