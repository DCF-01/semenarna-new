@model Order
<div class="container-fluid d-flex justify-content-center align-items-center">
    <div class="order-success-box d-block">
        <div class="order-success-box-inner">
            @if (Model.CartProducts != null)
            {
                @foreach (var item in Model.CartProducts)
                {
                    <p>@item.Id | @item.Price x @item.Quantity | @string.Join(", ", item.Variations)</p>
                }
            }

        </div>
    </div>
</div>